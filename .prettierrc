{
  "printWidth": 120,
  "tabWidth": 2,
  "semi": false,
  "singleQuote": true,
  "overrides": [
    {
      "files": "*.ts*",
      "options": {
        "parser": "typescript",
        "bracketSpacing": false,
        "arrowParens": "avoid"
      }
    },
    {
      "files": "*.scss",
      "options": {
        "parser": "scss",
        "semi": true
      }
    }
  ]
}
